@import url(https://fonts.googleapis.com/css?family=Lato)

$bgColor = #22262F
$containerColor = #fff
$containerWidth = 200px
$containerHeight = 100px
$containerBorderRadius = 4px
$containerShadow = 0px 4px 8px rgba(0,0,0,.1)

// *
//   transition all 1s
//   box-sizing border-box

body
  background $bgColor
  width 100vw
  height 100vh
  font-family "SF UI Display", "Arial", sans-serif
  color white
  font-size 20px
  text-align center
  padding-top 3.5vh
  overflow hidden
  a
    color white
    text-decoration none
    &:hover
      opacity 1 !important
      transition opacity .5s 0s !important
  .container
    width 100vw
    height 100vh
    opacity 0
    position absolute
    z-index 100
  .info
    font-size 14px
    opacity 0
    transform scale(.95)
    transition all 2s 1.6s
    position absolute
    left 24px
    top 100%
    margin-top -36px
    font-weight 200
  .app
    font-size 14px
    opacity 0
    transform scale(.95)
    transition all 2s 1.2s
    position absolute
    right 24px
    top 24px
    font-weight 200
  .type
    font-size 14px
    opacity 0
    transform scale(.95)
    transition all 2s 1s
    position absolute
    left 24px
    top 24px
    font-weight 200
  .created
    font-size 14px
    opacity 0
    transform scale(.95)
    transition all 2s 1.4s
    position absolute
    right 24px
    top 100%
    margin-top -36px
    font-weight 200
    z-index 101
  .word
    font-size 160px
    line-height 30vh
    opacity 0
    transform scale(.95)
    transition all 2s
  .translation, .transcription
    line-height 30vh
    font-size 24px
    opacity 0
    font-weight 200
  .translation
    opacity 0
    transform scale(.95)
    transition all 2s .5s
  .transcription
    opacity 0
    transform scale(.95)
    transition all 2s .3s
